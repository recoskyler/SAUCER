{
    "manifest_version" : 2,
    "name" : "SAUCER",
    "version" : "1.0",
    "description" : "SAUCER for nhentai",

    "icons" : {
        "128" : "icon128.png",
        "48" : "icon48.png",
        "16" : "icon16.png"
    },

    "content_scripts" : [
        {
            "matches" : [
                "<all_urls>"
            ],
            "js" : [
                "jquery.js",
                "popup.js"
            ]
        }
    ],

    "browser_action" : {
        "default_icon" : "icon.png",
        "default_popup" : "popup.html"
    },

    "background" : {
        "scripts" : ["background.js"]
    },

    "permissions" : [
        "contextMenus",
        "tabs",
        "storage"
    ]
}