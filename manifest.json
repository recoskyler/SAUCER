{
    "manifest_version" : 2,
    "name" : "SAUCER",
    "version" : "1.0",

    "content_scripts" : [
        {
            "matches" : [
                "<all_urls>"
            ],
            "js" : [
                "jquery.js"
            ]
        }
    ],

    "browser_action" : {
        "default_icon" : "icon.png"
    },

    "background" : {
        "scripts" : ["background.js"]
    },

    "permissions" : [
        "contextMenus",
        "tabs"
    ]
}